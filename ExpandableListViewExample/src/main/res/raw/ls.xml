<?xml version="1.0" encoding="utf-8"?>
<ls>
    <Description>list the files in directory</Description>
    <Example>
        <ExampleCommand>1. ls</ExampleCommand>
        <ExampleDetails>list files in current directory</ExampleDetails>
    </Example>
    <Example>
        <ExampleCommand>2. ls dir1</ExampleCommand>
        <ExampleDetails>list files in dir1</ExampleDetails>
    </Example>
    <Example>
        <ExampleCommand>3. ls -l dir1</ExampleCommand>
        <ExampleDetails>show details for each file in dir1</ExampleDetails>
    </Example>
    <Example>
        <ExampleCommand>4. ls -a dir1</ExampleCommand>
        <ExampleDetails>show all files(even hidden files)</ExampleDetails>
    </Example>
</ls>